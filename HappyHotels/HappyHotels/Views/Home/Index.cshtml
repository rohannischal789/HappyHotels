@{
    ViewBag.Title = "Home Page";
}
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap-datepicker.js"></script>
<link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        var date_input = $('input[name="date"]');


        date_input.datepicker('setDate', new Date(2019, 7, 20));
    })
</script>
<!-- Page Content -->
<div class="container">

    <br />
    <h1 class="text-center">
        Find your ideal hotel
    </h1>
    <br />
    <br />
    <br />
    <div class="row">
        <div class="col-md-12 col-sm-12 col-lg-12">
            <div class="well">
                <div class="row">
                    <!-- Form code begins -->
                    <form method="post">

                        <div class="col-md-3">
                            <div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <div class="form-group">
                                                <label for="exampleForm2">Going to</label>
                                                <input type="text" id="exampleForm2" tabindex="1" title="Enter your destination city" placeholder="Destination" onchange="" class="form-control">
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">

                                            <div class="form-group">
                                                <!-- Date input -->
                                                <label class="control-label" for="date">Check In</label>
                                                <input class="form-control" id="date" tabindex="2" title="Enter your check in date" name="date" placeholder="DD/MM/YYYY" type="text" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>

                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">

                                            <div class="form-group">
                                                <!-- Date input -->
                                                <label class="control-label" for="date1">Check out</label>
                                                <input class="form-control " id="date1" tabindex="3" name="date1" placeholder="DD/MM/YYYY" type="text" />
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div>
                                <div class="container-fluid">
                                    <div class="row">
                                        <div class="col-md-12 col-sm-12 col-xs-12">
                                            <br />
                                            <div class="form-group">
                                                <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Hotels")'">Search</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <h3 class="my-4 text-center">Why Choose Us?</h3>
        <br />
        <br />
        <div class="row">

            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card">

                    <!-- Card content -->
                    <div class="card-body">
                        <!-- Title -->
                        <h4 class="card-title"><a>Flexible Booking</a></h4>
                        <!-- Text -->
                        <p class="card-text">Adjust your booking with a click of a button. Easily available online</p>
                    </div>

                </div>
            </div>

            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <div class="card-body">

                        <!-- Title -->
                        <h4 class="card-title"><a>Discover</a></h4>
                        <!-- Text -->
                        <p class="card-text">Discover, book and manage your trip from anywhere anytime.</p>
                    </div>

                </div>
            </div>

            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card">
                    <div class="card-body">

                        <!-- Title -->
                        <h4 class="card-title"><a>Trusted Services</a></h4>
                        <!-- Text -->
                        <p class="card-text">Our Trusted Services guarantee your booking, so that you never have to worry!</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
